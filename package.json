{
  "name": "@impulsit/robokassa",
  "version": "0.0.1",
  "description": "Robokassa API Library",
  "main": "src/index.ts",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build": "tsc",
    "lint": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/impulit/robokassa.git"
  },
  "keywords": [
    "robokassa",
    "impulsit",
    "impuls",
    "api"
  ],
  "author": "N000bak",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/impulit/robokassa/issues"
  },
  "homepage": "https://gitlab.com/impulit/robokassa#readme",
  "devDependencies": {
    "@types/node": "^12.12.6",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint --fix",
      "git add"
    ],
    "*.{ts, json, html, css}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
